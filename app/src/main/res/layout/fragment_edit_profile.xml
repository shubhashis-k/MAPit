<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/update_profile_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_profile"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/update_profile_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_profile"
            android:layout_centerInParent="true"
          />
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/update_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_action_person"
            android:drawablePadding="8dp"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@null"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/update_signup_phone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/ic_action_phone"
            android:drawablePadding="8dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@null"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/update_signup_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_action_password"
            android:drawablePadding="8dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@null"
            android:textSize="25sp" />
        <Button
            android:id="@+id/save_edit_profile"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFF"
            android:text="Save"
            android:textSize="25sp"
            />
    </LinearLayout>
</LinearLayout>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="mapit.gcm" />
            </intent-filter>
        </receiver>

        <service android:name=".GcmIntentService" />

        <activity
            android:name=".GCM"
            android:label="@string/title_activity_gcm" >
        </activity>
    </application>

</manifest>